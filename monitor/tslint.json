{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "interface-name": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "no-var-requires": false,
    "array-type": false,
    "variable-name": [true, "allow-leading-underscore"],
    "max-classes-per-file": true,
    "no-bitwise": false
  },
  "jsRules": {
    "no-console": false,
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  }
}
